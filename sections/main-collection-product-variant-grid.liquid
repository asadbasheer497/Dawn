<style>
  
  ul.variation-card-main {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    gap: 10px;
        padding: 0px;
}
  .variation-card-item{
    width:calc(25% - 10px);
  }
 .variation-card-item img {
    width: 100%;
     border: 1px solid #afa8a88f;
}
  
</style>
<div class="section-{{  section.id }} page-width">
<ul class="variation-card-main">
 {% for collection in collections %}
  {% for product11 in collection.products %}
     {% for variant in product11.variants %}
         <li class="variation-card-item">
            <a href="{{ variant.url }}">
       
             {% if variant.featured_image.src != blank or variant.featured_image.src != 'null' or variant.featured_image.src != "https://asadbasheer.myshopify.com/cdn/shopifycloud/shopify/assets/no-image-2048-5e88c1b20e087fb7bbe9a3771824e743c244f437e4f8ba93bbf7b11b53f7824c_large.gif" %}
              <img src="{{ variant.featured_image.src | img_url: 'large' }}" alt="{{ selected_variant.title }}" />
              {% else %}
                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
               {% endif %}
            </a>
              <div value="{{ variant.id }}" class="card-content">
               <h3> {{ variant.title }}</h3>
                <h5>{{ variant.price  | money }}</h5>
        </div>
         </li>
  {% endfor %}
  {% endfor %}
{% endfor %}
</ul>
</div>

<h1>{{ section.settings.title }}</h1>


{% schema %}
  {
    "name": "Product variants",
   
    "settings": [
      {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    }
    ],
    
    "presets": [
      {
        "name": "Product variants"
      }
    ]
  }
{% endschema %}